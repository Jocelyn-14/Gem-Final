<div class="row">
    {{#each gems}}
        <div class="col-md-3">
            <div class="card">
                <h6>{{_id}}</h6>
                <h4 class="card-title d-flex justify-content-between align-item-center">
                    {{title}}
                    <a href="/gems/edit/{{_id}}">
                        <i class="fas fa-edit">
                        </i>
                    </a>
                </h4>
                <p>
                    Description: {{description}}
                </p>
                <p>
                    Color: {{color}}
                </p>
                <p>
                    Rarity: {{rarity}}
                </p>
                <p>
                    Shine: {{shine}}
                </p>
                <p>
                    Faces: {{faces}}
                </p>
                <form action="/gems/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-primary btn-block btn-sm" type="submit">
                    Delete
                </button>
                </form>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are not gems yet.</p>
                <a href="/gems/add" class="btn btn-success btn-block">Create One!</a>
            </div>
        </div>
    {{/each}}
</div>