<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Gem</h3>
        </div>
        <div class="card-body">
            <form action="/gems/edit-gem/{{gem._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{gem.title}}">
                </div>
                <div class="form-group">
                    <textarea name="color" cols="30" rows="10"
                        class="form-control">{{gem.color}}</textarea>
                </div>
                <div>
                    <h4>Rarity</h4>
                    <select name="rarity">
                        <option>1</option>
                        <option>2</option>
                        <option selected>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div>
                    <h4>How bright is it?</h4>
                    <select name="shine">
                        <option>1</option>
                        <option>2</option>
                        <option selected>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div>
                    <h4>Faces</h4>
                    <select name="faces">
                        <option>1</option>
                        <option>2</option>
                        <option selected>3</option>
                        <option>4</option>
                        <option>5+</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea name="description" cols="30" rows="10"
                        class="form-control">{{gem.description}}</textarea>
                </div>
                <div class="gallery">
                            <h3>Select a gem:</h3>
                            <div class="line"></div>
                            <div class="cont">
                                <div class="image"><img src="img/gem-01.gif" alt="">
                                    <img src="img/gem-02.gif" alt=""><img src="img/gem-03.gif" alt="">
                                    <img src="img/gem-04.gif" alt=""><img src="img/gem-05.gif" alt=""></div>
                                <div class="image"><img src="img/gem-06.gif" alt="">
                                    <img src="img/gem-07.gif" alt=""><img src="img/gem-08.gif" alt="">
                                    <img src="img/gem-09.gif" alt=""><img src="img/gem-10.gif" alt=""></div>
                            </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>